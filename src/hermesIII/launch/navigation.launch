<launch>
	<group ns="planner">
        <remap from="openni_points" to="/planner_cloud"/>
        <remap from="base_scan" to="/base_scan"/>
        <remap from="map" to="/map"/>
        <remap from="move_base_simple/goal" to="/planner_goal"/>
        
        <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    	  <rosparam file="$(find hermesIII)/navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
     	  <rosparam file="$(find hermesIII)/navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
    	  <rosparam file="$(find hermesIII)/navigation/local_costmap_params.yaml" command="load" />
    	  <rosparam file="$(find hermesIII)/navigation/global_costmap_params.yaml" command="load" />
    	  <rosparam file="$(find hermesIII)/navigation/base_local_planner_params.yaml" command="load" />
        </node>
	</group>
</launch>